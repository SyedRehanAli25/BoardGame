pipeline {
    agent any

    tools {
        maven 'LocalMaven'   
        jdk 'JDK'            
    }

    environment {
        SONARQUBE_SERVER = 'SonarQube' // Must match Jenkins Sonar config name
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/adarshadshetty/BoardGame.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE_SERVER}") {
                    sh 'mvn clean verify sonar:sonar'
                }
            }
        }
    }
}
